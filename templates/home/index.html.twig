{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 rounded-bottom carousel-pic" src="{{ asset('img/doca.jpeg') }}"  alt="">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 rounded-bottom carousel-pic" src="{{ asset('img/dogFaro.jpeg') }}"  alt="">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 rounded-bottom carousel-pic" src="{{ asset('img/venice.jpeg') }}"  alt="">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



    {% for post in posts %}

    <section>
        <div class="p-4">
            <div class="card">
                <div class="card-header rounded h3 blue-gradient-right text-light row">
                    <div class='col'>
                        {{ post.name }}
                    </div>
                    <a class='text-right col nav-link text-light small' {% if post.userId == info.uId %} href="blog.php?postId={{ post.postId }}"> Update {% else %} > {% endif %}
                    </a>
                </div>
            </div>
            <div class="card-body rounded-bottom grey-color">
                <p>Updated: <span> {{ post.updated_at }}</span></p>
                <p>Created: <span> {{ post.created_at }}</span></p>
                <a>{{ post.content }}</a>
            </div>
        </div>
        </div>

    </section>
    {% endfor %}


{% endblock %}
