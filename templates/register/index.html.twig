{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}
    <section class="container form mt-4 white-box rounded">
        <div class="pt-4">
            <form method="post" action="register_action.php" class="m-5">
                <h1 class="text-center mb-4"> Sign up</h1>

                <div class="form-group pb-3 form-bars">
                    <h5>Name</h5>
                    <input name="newName" type="text" class="form-control mb-3" value="">
                </div>
                <div class="form-group pb-3 form-bars">
                    <h5>Email</h5>
                    <input name="newEmail" type="text" class="form-control mb-3" value=
                    "">
                </div>
                <div class="form-group pb-3 form-bars">
                    <h5>Password</h5>
                    <input name="newPassword" type="password" class="form-control mb-3">
                </div>
                <div class="form-group pb-3 form-bars">
                    <h5>Confirm Password</h5>
                    <input name="newConfPassword" type="password" class="form-control mb-3">
                </div>
                <div class="text-center pt-5">
                    <button type="submit" style="width: 15rem;" class="btn main-blue text-light">Go</button>
                    <button type="reset" style="width: 15rem;" class="btn btn-danger">Clear</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
